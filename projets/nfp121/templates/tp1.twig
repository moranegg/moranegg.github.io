                                    <br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;*&nbsp;prédéfines,&nbsp;java.lang.String&nbsp;:&nbsp;les&nbsp;méthodes&nbsp;replaceAll,&nbsp;toLowerCase&nbsp;et
                                    <br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;*&nbsp;substring&nbsp;java.lang.Math&nbsp;:&nbsp;la&nbsp;méthode&nbsp;min<br>
                                    <br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;*&nbsp;<b>BlueJ&nbsp;:&nbsp;Menu&nbsp;Aide</b>
                                    <br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;*&nbsp;
                                    <br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;*&nbsp;<strong>@return</strong>&nbsp;le&nbsp;login&nbsp;du&nbsp;Cnam&nbsp;simplifié,&nbsp;sans&nbsp;les&nbsp;adaptations&nbsp;dues&nbsp;aux
                                    <br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;homonymes...
                                    <br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;*/</font>
                                <br/>&nbsp;&nbsp;&nbsp;&nbsp;<strong><font color='#7f0055'>public</font></strong>&nbsp;String&nbsp;login()&nbsp;{
                                <br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;String&nbsp;login;
                                <br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color='#3f7f5f'>//construire&nbsp;&nbsp;login
                                </font><br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong><font color='#7f0055'>if</font></strong>(<strong><font color='#7f0055'>this</font></strong>.nom.length()&nbsp;>6){
